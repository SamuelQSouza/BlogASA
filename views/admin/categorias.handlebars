<h2>Lista de categorias: </h2>
<a href="/admin/categorias/add"><button class="btn btn-outline-success">Nova categoria</button></a>

{{#each categorias}}
<div class="card my-4">
    <div class="card-body">
        <h3 class="card-title">{{nome}}</h3>
        <h6 class="card-subtitle mb-2 text-muted">Slug: {{slug}}</h6>
        <small>Data: {{date}} </small><br>
        <div class="btn-group" role="group" aria-label="Basic example">
            <a href="categorias/edit/{{_id}}">
            <button class="btn btn-outline-primary">Editar</button>
            </a>
        </div>
        <div class="btn-group" role="group" aria-label="Basic example">     
            <form action="categorias/deletar" method="POST">
                <button type="submit" class="btn btn-outline-primary">Deletar</button>
                <input type="hidden" name="id" value="{{_id}}">
            </form>
        </div>        
    </div>
</div>
{{else}}
<h3 class="mt-4">Nenhuma categoria registrada!</h3>

{{/each}}