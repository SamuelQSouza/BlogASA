<h2>Lista de postagens: </h2>
<a href="/admin/postagens/add"><button class="btn btn-outline-success">Nova postagem</button></a>

{{#each postagens}}
<div class="card mt-2">
    <div class="card-body">
        <h3 class="card-title">{{titulo}}</h3>
        
        <small class="card-subtitle mb-2 text-muted">Data: {{date}}</small><br>
        <small class="card-subtitle mb-2 text-muted">Categoria: {{categoria.nome}}</small><br>
        <p class="card-text">Descrição: {{descricao}}</p>
        <div class="btn-group" role="group" aria-label="Basic example">
        <a href="/admin/postagens/edit/{{_id}}">
        <button class="btn btn-outline-primary">Editar</button>
        </a>
        <a href="/admin/postagens/deletar/{{_id}}">
        <button class="btn btn-outline-primary">Deletar</button>
        </a>
        </div>        
    </div>
</div>
{{else}}
<h3 class="mt-4">Nenhuma categoria registrada!</h3>

{{/each}}